{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@passed-way/error": [
        "libs/error/src"
      ],
      "@passed-way/error/*": [
        "libs/error/src/*"
      ],
      "@passed-way/logger": [
        "libs/logger/src"
      ],
      "@passed-way/logger/*": [
        "libs/logger/src/*"
      ],
      "@passed-way/app-bootstrapper": [
        "libs/app-bootstrapper/src"
      ],
      "@passed-way/app-bootstrapper/*": [
        "libs/app-bootstrapper/src/*"
      ],
      "@passed-way/health-checker": [
        "libs/health-checker/src"
      ],
      "@passed-way/health-checker/*": [
        "libs/health-checker/src/*"
      ],
      "@passed-way/auth-helper": [
        "libs/auth-helper/src"
      ],
      "@passed-way/auth-helper/*": [
        "libs/auth-helper/src/*"
      ]
    }
  },
  "include": [
    "apps/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "global.d.ts"
  ]
}